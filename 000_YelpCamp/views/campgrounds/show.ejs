<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <div class="row">
        <div class="col-5 offset-1">
            <div class="card w-100 mb-5" style="width: 18rem;">
                <img src="<%= ground.image %>" class="card-img-top" alt="<%= ground.title %>">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= ground.title %>
                    </h5>
                    <p class="card-text">
                        <%= ground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= ground.location %>
                    </li>
                    <li class="list-group-item">¥<%= ground.price %>/night</li>
                    <li class="list-group-item">author: <%= ground.author.username %>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds" class="card-link">Back to List</a>
                    <!-- テキスト同市ではなく、ObjectId の比較 の場合に equals を使用-->
                    <% if( currentUser && ground.author._id.equals(currentUser._id)){ %>
                        <a href="/campgrounds/<%= ground._id %>/edit" class="card-link">Edit</a>
                        <% } %>
                </div>
            </div>
        </div>
        <div class="col-5">
            <% if (currentUser) { %>
                <h2>Review</h2>
                <form action="/campgrounds/<%= ground._id %>/reviews" method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="rating">Rating</label>
                        <fieldset class="starability-basic">
                            <legend>Rating:</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                                aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="comment">Comment</label>
                        <textarea class="form-control" id="comment" rows="3" name="review[body]"></textarea>
                    </div>
                    <button class="btn btn-success mb-3">Submit Review</button>
                </form>
                <% for (let review of ground.reviews) { %>
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                <p class="starability-result" data-rating="<%= review.rating %>">
                                    <%= review.rating %> Stars
                                </p>
                            </h5>
                            <p class="card-text">
                                <%= review.body %>
                            </p>
                            <!-- review.author.username を表示するには、routehandler 側で populate が必要 -->
                            <p class="card-text"><small class="text-body-secondary">- by <%= review.author.username %>
                                        </small></p>
                            <form action="/campgrounds/<%= ground._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="POST">
                                <% if (currentUser && review.author._id.equals(currentUser._id)) { %>
                                    <button class="btn btn-danger">Delete Review</button>
                                    <% } %>
                            </form>
                        </div>
                    </div>
                    <% } %>
                        <% } %>
        </div>
    </div>